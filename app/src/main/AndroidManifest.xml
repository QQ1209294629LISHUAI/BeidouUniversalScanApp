<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beidouspatial.universalscanapp">

    <!--动态权限申请无需再配置文件中再配置-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraActivity"></activity>
        <activity android:name=".CutImageActivity"></activity>
        <activity android:name=".ShowImageActivity"></activity>
        <activity android:name=".activity.PicDetailShowActivity"></activity>
        <activity android:name=".activity.ShowSFZImageActivity"></activity>
        <activity android:name=".activity.BigPicActivity"></activity>
        <activity android:name=".BeidouMainActivity"></activity>
    </application>

</manifest>