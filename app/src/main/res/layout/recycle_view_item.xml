<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <!--照片-->
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/y300"
        android:layout_height="@dimen/x200"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y10"
        android:background="@drawable/tv_background"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x25"
        android:orientation="vertical">

        <!--文档名称-->
        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y35"
            android:text="新文档 2019-01-11 11.01.01"
            android:textColor="#495968"
            android:textSize="@dimen/y38" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y16"
            android:orientation="horizontal">

            <!--最后拍摄时间-->
            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/01/11 11:25"
                android:textColor="#828689"
                android:textSize="@dimen/y30" />

            <!--文档个数-->
            <TextView
                android:id="@+id/tv_pic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:background="@drawable/tv_background"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8"
                android:text="1"
                android:textColor="#828689"
                android:textSize="@dimen/y30" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>